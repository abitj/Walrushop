@model IEnumerable<Product>

<div style="display: block">
    <a href="/Product/InsertProduct/">
        <input type="submit" value="Create A New Product" class="btn btn-primary" />
    </a>
    
</div>



    <h2>Products</h2>
    <table class="table">
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category ID</th>
            <th>On Sale</th>
            <th>Stock Level</th>
        </tr>

        @foreach (var product in Model)
        {
            <tr>
                <td><a href=/Product/ViewProduct/@product.ProductID>@product.ProductID</a></td>
                <td>@product.Name</td>
                <td>$@product.Price</td>
                <td>@product.CategoryID</td>
                <td>@product.OnSale </td>
                <td>@product.StockLevel</td>

            </tr>
        }
    </table>