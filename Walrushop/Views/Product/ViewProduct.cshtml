@model Product

<h3>@Model.Name Information</h3>

<table class="table">
    <tr>
        <th>Product ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category ID</th>
        <th>On Sale</th>
        <th>StockLevel</th>
        <th></th>
        <th></th>

    </tr>
    <tr>
        <td>@Model.ProductID</td>
        <td>@Model.Name</td>
        <td>$@Model.Price</td>
        <td>@Model.CategoryID</td>
        <td>@Model.OnSale</td>
        <td>@Model.StockLevel</td>
        <td>
            <a href="/Product/UpdateProduct/@Model.ProductID">
                <input type="submit" value="Update" class="btn btn-info" />
            </a>
        </td>
        <td>
            @using (Html.BeginForm("DeleteProduct", "Product", "Post"))
            {
                <input type="hidden" asp-for="ProductID" value="@Model.ProductID" />
                <input type="submit" onclick="return confirm('Are you sure you want to remove this product?')" value="Delete" class=" btn btn-danger" /> 
             }
        </td>
    </tr>

</table>
